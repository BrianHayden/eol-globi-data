<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>
    <defaultCache
            maxElementsInMemory="500"
            eternal="false"
            timeToLiveSeconds="86400"
            maxElementsOnDisk="10"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

    <cache name="contributorCache" maxEntriesLocalHeap="50" timeToLiveSeconds="86400"/>
    <cache name="infoCache" maxEntriesLocalHeap="50" timeToLiveSeconds="86400"/>
    <cache name="sourcesCache" maxEntriesLocalHeap="50" timeToLiveSeconds="86400"/>
    <cache name="locationCache" maxEntriesLocalHeap="50" timeToLiveSeconds="86400"/>
</ehcache>